<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center|center_horizontal|center_vertical"
    android:background="@drawable/light_gray_color">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/light_gray_color">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/red_color_btn"
            android:src="@drawable/ic_red_color"
            android:background="@drawable/light_gray_color"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/orange_color_btn"
            android:src="@drawable/ic_orange_color"
            android:background="@drawable/light_gray_color"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/yellow_color_btn"
            android:src="@drawable/ic_yellow_color"
            android:background="@drawable/light_gray_color"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/light_gray_color">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/green_color_btn"
            android:src="@drawable/ic_green_color"
            android:background="@drawable/light_gray_color"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/blue_color_btn"
            android:src="@drawable/ic_blue_color"
            android:background="@drawable/light_gray_color"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/purple_color_btn"
            android:src="@drawable/ic_purple_color"
            android:background="@drawable/light_gray_color"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/light_gray_color">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/light_yellow_color_btn"
            android:src="@drawable/ic_light_yellow_color"
            android:background="@drawable/light_gray_color"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/light_blue_color_btn"
            android:src="@drawable/ic_light_blue_color"
            android:background="@drawable/light_gray_color"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/white_color_btn"
            android:src="@drawable/ic_white_color"
            android:background="@drawable/light_gray_color"/>
    </LinearLayout>

</LinearLayout>